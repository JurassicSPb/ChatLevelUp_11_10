<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/color_right"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:textColor="@color/colorMainText"
        android:hint="@string/add_info"
        android:textColorHint="@color/colorHintText"
        android:gravity="top|center"
        android:textSize="15sp"
        android:layout_height="0dp"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:padding="8dp"
        android:layout_toRightOf="@+id/profile_photo"
        android:layout_below="@+id/color_top"
        android:background="@color/colorButtons"
        android:layout_above="@+id/color_bottom"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/colorButtons"
        android:text="@string/logout"
        android:textColor="@color/colorButtonsText"
        android:textSize="18sp"
        android:layout_gravity="start"
        android:layout_below="@+id/profile_photo" />

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/blank_profile"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/color_top"/>

    <TextView
        android:id="@+id/color_bottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/profile_photo"
        android:layout_toRightOf="@+id/logout"/>

    <TextView
        android:id="@+id/color_top"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textColor="@color/colorMainText"
        android:text="Your Name"
        android:textSize="26sp"
        android:paddingLeft="16sp"
        android:gravity="center_vertical"
        android:textStyle="italic"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>